<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <CheckBox
        android:id="@+id/harassment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harassment" />

    <CheckBox
        android:id="@+id/missingInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Missing information" />

    <CheckBox
        android:id="@+id/spamming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spamming" />

    <CheckBox
        android:id="@+id/inappropriateContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inappropriate Content" />

</LinearLayout>
